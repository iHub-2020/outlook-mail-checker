{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "author": "reyanmatic",

  "icons": {
    "48": "icons/mop48.png",
    "96": "icons/mop96.png"
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.outlook.live.com/*", "*://*.outlook.office.com/*"],
      "js": ["./src/outlook-mail-checker.js"]
    }
  ],

  "default_locale": "en",

  "action": {
    "default_icon":{
      "48": "icons/mop48.png",
      "96": "icons/mop96.png"
    },
    "default_title": "Outlook Mail Checker",
    "default_popup": "./src/popup.html"
  }
}
