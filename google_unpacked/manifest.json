{
  "manifest_version": 3,
  "name": "Outlook Mail Checker",
  "version": "1.0.3",
  "description": "增强版 Outlook 网页邮件检查器，支持广告拦截、主题定制、未读计数等功能",
  
  "default_locale": "en",
  
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  
  "host_permissions": [
    "https://outlook.live.com/*",
    "https://outlook.office365.com/*",
    "https://outlook.office.com/*"
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "48": "icons/mop48.png",
      "96": "icons/mop96.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://outlook.live.com/*",
        "https://outlook.office365.com/*",
        "https://outlook.office.com/*"
      ],
      "js": ["src/outlook-mail-checker.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "48": "icons/mop48.png",
    "96": "icons/mop96.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://outlook.live.com/*", "https://outlook.office365.com/*", "https://outlook.office.com/*"]
    }
  ]
}

